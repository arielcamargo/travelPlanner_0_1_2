<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redwoodGroveGreen"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activities.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/menuToCompare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorWhite"
            android:text="@string/menu_to_compare"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/menuToPlanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorWhite"
            android:text="@string/menu_to_planner"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

    <TextView
        android:id="@+id/menuInfo"
        android:layout_width="395dp"
        android:layout_height="47dp"
        android:text="@string/menu_info"
        android:textAlignment="viewStart"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:paddingTop="10dp"
        android:paddingBottom="100dp">

        <LinearLayout
            android:id="@+id/orderedLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <fragment
                android:id="@+id/fragment0"
                android:name="com.example.travelplanner_0_1_1.fragments.VehicleButtonFragment"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginBottom="10dp" />

            <fragment
                android:id="@+id/fragment1"
                android:name="com.example.travelplanner_0_1_1.fragments.VehicleButtonFragment"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginBottom="10dp" />

            <fragment
                android:id="@+id/fragment2"
                android:name="com.example.travelplanner_0_1_1.fragments.VehicleButtonFragment"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginBottom="10dp" />

            <fragment
                android:id="@+id/fragment3"
                android:name="com.example.travelplanner_0_1_1.fragments.VehicleButtonFragment"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginBottom="10dp" />

            <fragment
                android:id="@+id/fragment4"
                android:name="com.example.travelplanner_0_1_1.fragments.VehicleButtonFragment"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginBottom="10dp" />

            <fragment
                android:id="@+id/fragment5"
                android:name="com.example.travelplanner_0_1_1.fragments.VehicleButtonFragment"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginBottom="10dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>